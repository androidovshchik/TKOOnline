<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <include
        layout="@layout/status_bar"/>

    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/containers_map"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="@dimen/status_bar_height"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:background="@android:color/white"
        android:elevation="6dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="@dimen/status_bar_height"
        android:background="@drawable/bottom_shadow"
        android:elevation="6dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/containers_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/containers_map"
        android:layout_above="@+id/containers_buttons"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_container"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_above="@+id/containers_buttons"
        android:background="@drawable/top_shadow"/>

    <LinearLayout
        android:id="@+id/containers_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/containers_complete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:textAllCaps="false"
            android:text="Завершить\nмаршрут"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:lineSpacingExtra="3sp"
            android:background="@drawable/button_green"
            android:foreground="?android:attr/selectableItemBackground"
            fontPath="fonts/Roboto-Medium.ttf"/>

        <Button
            android:id="@+id/containers_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:textAllCaps="false"
            android:text="Фото вне\nсправочника"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:lineSpacingExtra="3sp"
            android:background="@drawable/button_gray"
            android:foreground="?android:attr/selectableItemBackground"
            fontPath="fonts/Roboto-Medium.ttf"/>

    </LinearLayout>

</RelativeLayout>