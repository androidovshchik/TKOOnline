<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <include
        layout="@layout/status_bar"/>

    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/containers_map"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="@dimen/status_bar_height"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:background="@android:color/white"
        android:elevation="6dp"
        tools:background="@android:color/darker_gray"
        tools:elevation="0dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="@dimen/status_bar_height"
        android:background="@drawable/bottom_shadow"
        android:elevation="6dp"
        tools:elevation="0dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="@dimen/status_bar_height"
        android:layout_alignParentEnd="true"
        android:paddingStart="16dp"
        android:paddingEnd="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="6dp"
        tools:elevation="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/control_rect"
            android:elevation="16dp">

            <ImageView
                android:id="@+id/containers_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:paddingTop="8dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingBottom="8dp"
                android:src="@drawable/ic_plus"/>

            <ImageView
                android:id="@+id/containers_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:paddingTop="8dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_minus"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/containers_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:src="@drawable/ic_direction"
            android:background="@drawable/control_oval"
            android:elevation="16dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/containers_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/containers_map"
        android:layout_above="@+id/containers_buttons"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_container"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_above="@+id/containers_buttons"
        android:background="@drawable/top_shadow"/>

    <LinearLayout
        android:id="@+id/containers_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/containers_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textAllCaps="false"
            android:text="Завершить\nмаршрут"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:lineSpacingExtra="3sp"
            android:background="@drawable/button_green"
            android:foreground="?android:attr/selectableItemBackground"
            fontPath="fonts/Roboto-Medium.ttf"/>

        <View
            android:id="@+id/containers_placeholder"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            tools:visibility="invisible"/>

        <Button
            android:id="@+id/containers_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textAllCaps="false"
            android:text="Фото вне\nсправочника"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:lineSpacingExtra="3sp"
            android:background="@drawable/button_gray"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="gone"
            fontPath="fonts/Roboto-Medium.ttf"
            tools:visibility="visible"/>

    </LinearLayout>

</RelativeLayout>