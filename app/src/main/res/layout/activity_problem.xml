<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <fragment
        android:id="@+id/status_bar_fragment"
        android:name="ru.iqsolution.tkoonline.screens.status.StatusFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        tools:layout="@layout/include_status"/>

    <include
        layout="@layout/include_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/include_platform"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDivider"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:gravity="center"
                android:text="Тип проблемы"
                android:textSize="18sp"
                android:textColor="@color/colorTextGrayLight"
                android:lineSpacingExtra="3sp"
                tools:textStyle="bold"
                fontPath="fonts/Roboto-Bold.ttf"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>