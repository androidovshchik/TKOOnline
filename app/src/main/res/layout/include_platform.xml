<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/platform_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:lineSpacingExtra="3dp"
        android:paddingStart="40dp"
        android:paddingTop="20dp"
        android:paddingEnd="0dp"
        android:paddingBottom="20dp"
        android:textColor="@color/colorTextGrayLight"
        android:textSize="16sp"
        tools:text="ID: 1 234 567 890" />

    <TextView
        android:id="@+id/platform_range"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:lineSpacingExtra="3dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColor="@color/colorTextGrayLight"
        android:textSize="16sp"
        tools:text="с 07:00 до 23:00" />

    <ImageButton
        android:id="@+id/ib_yandex"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:background="?android:attr/selectableItemBackground"
        android:enabled="false"
        android:padding="14dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_yandex_navigator"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>