<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="0dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/roboto_bold"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/colorTextBlack87"
        android:textSize="20sp"
        tools:text="Пароль" />

    <EditText
        android:id="@+id/dialog_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_title"
        android:layout_marginEnd="15dp"
        android:imeOptions="actionDone"
        android:lineSpacingExtra="8dp"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/colorTextBlack87"
        android:textSize="16sp"
        tools:text="4567" />

    <TextView
        android:id="@+id/dialog_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/dialog_action"
        android:fontFamily="@font/roboto_regular"
        android:singleLine="true"
        android:textColor="#FF473A"
        android:textSize="14sp"
        tools:text="ErrorErrorErrorErrorErrorErrorErrorErrorErrorErrorErrorErrorError" />

    <Button
        android:id="@+id/dialog_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_input"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:lineSpacingExtra="2dp"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        tools:text="Подтвердить" />

    <ImageButton
        android:id="@+id/dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:padding="10dp"
        android:src="@drawable/ic_close"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>