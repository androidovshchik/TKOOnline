<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    tools:layout_height="98dp"
    tools:layout_width="match_parent"
    tools:orientation="vertical"
    tools:parentTag="RelativeLayout">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider" />

    <ImageView
        android:id="@+id/icon_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="true"
        tools:src="@drawable/ic_trash_can" />

    <TextView
        android:id="@+id/text_type"
        fontPath="fonts/Roboto-Bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/icon_type"
        android:lineSpacingExtra="5sp"
        android:textColor="@color/colorTextGrayDark"
        android:textSize="30sp"
        tools:text="ТБО"
        tools:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:layout_marginEnd="-4dp"
        android:layout_toStartOf="@+id/block2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/volume_value"
            fontPath="fonts/Roboto-Regular.ttf"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:lineSpacingExtra="5sp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:textColor="@color/colorTextGrayLight"
            android:textSize="30sp"
            tools:text="0,8м3" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/block2"
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/count_value"
            fontPath="fonts/Roboto-Regular.ttf"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:lineSpacingExtra="5sp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:textColor="@color/colorTextGrayLight"
            android:textSize="30sp"
            tools:text="5шт" />

        <ImageView
            android:id="@+id/arrow_up_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingStart="18dp"
            android:paddingTop="10dp"
            android:paddingEnd="18dp"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_arrow_up"
            android:visibility="invisible"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/arrow_down_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:adjustViewBounds="true"
            android:paddingStart="18dp"
            android:paddingTop="10dp"
            android:paddingEnd="18dp"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_arrow_down"
            android:visibility="invisible"
            tools:visibility="visible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorDivider" />

</merge>